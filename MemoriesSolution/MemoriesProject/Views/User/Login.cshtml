@model UserLoginVM

@{
    ViewBag.Title = "Logga in";
    ViewBag.Heading = "Logga in";
}
<div class="row g-3">
    <div class="col-6">
        <form method="post">
            <label asp-for="@Model.Username"></label>
            <input asp-for="@Model.Username" />
            <span asp-validation-for="@Model.Username"></span>

            <label asp-for="Password"></label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
            <div id="no-account-message"></div>

            <div class="col-auto">
                <button class="btn" type="submit" name="name">Logga in</button>
            </div>
        </form>
    </div>

</div>
