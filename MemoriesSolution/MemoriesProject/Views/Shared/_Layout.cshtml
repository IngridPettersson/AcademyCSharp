<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css" />
    <link rel="stylesheet"
          href="~/CSS/main.css" />
    @RenderSection("css", false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <a style="margin-left:3rem" asp-controller="Memory" asp-action="Index">Min sida</a>&emsp;
            <a asp-controller="Memory" asp-action="Create">Lägg till minne</a>&emsp;
            <a asp-controller="User" asp-action="Login">Logga in</a>
        </nav>
    </header>
    <div class="container">
        <h2>@ViewBag.Heading</h2>
        @RenderBody()
    </div>
        <footer style="position:fixed; bottom:0; width:100%; background-color:azure; text-align:center">
            &copy; StrumpanTheCoder 2021
        </footer>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.6.0.min.js"></script>
    @RenderSection("scripts", false)

</body>
</html>
