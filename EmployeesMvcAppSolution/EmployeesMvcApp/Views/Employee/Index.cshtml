@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EmployeesMvcApp.Models.Employee[]

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Employees - home</title>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css" />
</head>
<body>
    <h1>Employees</h1>
    <div>
        <ul>
            @foreach (var item in Model)
            {
                <li><a asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id">@item.Name</a></li>
            }
        </ul>
    </div>
    <a asp-controller="Employee" asp-action="Create">Create new employee</a>
</body>
</html>
